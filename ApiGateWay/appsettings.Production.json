{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuthServiceSettings:Url": "http://authservice-api:80",

  "ReverseProxy": {
    "Routes": {
      "AuthRoute" : {
        "ClusterId": "AuthCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/auth/{**any}"
        }
      },
      "ProductRoute" : {
        "ClusterId": "ProductCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/products/{**any}"
        }
      },

      "OrderRoute" : {
        "ClusterId": "OrderCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/orders/{**any}"
        }
      }
    },
    "Clusters": {
      "AuthCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://authservice-api:80"
          }
        }
      },
      "ProductCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://productservice-api:80"
          }
        }
      },
      "OrderCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://orderservice-api:80"
          }
        }
      }
    }
  }
}
