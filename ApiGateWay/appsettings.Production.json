{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuthServiceSettings:Url": "http://auth-srv:80",
//  "Cors": "http://clientapp.coffeesystem.com:80;http://employeeapp.coffeesystem.com:80",
  "Cors": "http://employeeapp.coffeesystem.com:80",

  "ReverseProxy": {
    "Routes": {
      "AuthRoute" : {
        "ClusterId": "AuthCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/auth/{**any}"
        }
      },
      "SignalRService" : {
        "ClusterId": "SignalRServiceCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/signalr/{**any}"
        }
      },
      "ProductRoute" : {
        "ClusterId": "ProductCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/products/{**any}"
        }
      },

      "OrderRoute" : {
        "ClusterId": "OrderCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/orders/{**any}"
        }
      }
    },
    "Clusters": {
      "AuthCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://auth-srv:80"
          }
        }
      },
      "SignalRServiceCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://signalr-srv:80"
          }
        }
      },
      "ProductCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://product-srv:80"
          }
        }
      },
      "OrderCluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://order-srv:80"
          }
        }
      }
    }
  }
}
